---
interface Props {
  id?: string;
  class?: string;
}
const { id = "", class: className = "" } = Astro.props;
---

<a
  id={id}
  data-buyticket
  href="https://seeklocal.lemonsqueezy.com/buy/23535a40-2b3d-4f0f-917d-715ecc981b2a?media=0&logo=0&checkout[billing_address][country]=MX"
  class:list={[className, "min-w-32 min-h-max flex items-center justify-center"]}
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class="size-6 hidden animate-spin"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99"
    ></path>
  </svg>

  <slot />
</a>

<script>
  const buyTicketLinks = document.querySelectorAll("[data-buyticket]");

  buyTicketLinks.forEach((link) => {
    link.addEventListener("click", () => {
      link.classList.add("brightness-50");
      Array.from(link.children).forEach((element) => {
        element.classList.toggle("hidden");
      });
    });
  });
</script>
