---
interface Props {
  name: string;
  class?: string;
}
const { name = "", class: className = "" } = Astro.props;
---

{
  name === "check" && (
    <svg
      data-icon="check"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class={`size-6 ${className}`}
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="m4.5 12.75 6 6 9-13.5"
      />
    </svg>
  )
}

